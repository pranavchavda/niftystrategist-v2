                  <div>
                    <p className="text-sm font-medium text-zinc-600">Sessions</p>
                    <p className="text-xl font-bold text-zinc-900">{formatNumber(dashboardData?.ga4?.sessions || dashboardData?.ga4?.users || '0')}</p>
