                            <th className="text-left py-2 text-sm font-medium text-zinc-600">Revenue</th>
                          </tr>
                        </thead>
                        <tbody>
                          {dashboardData.ga4.traffic_sources.slice(0, 5).map((source, index) => (
                            <tr key={index} className="border-b border-zinc-100">
                              <td className="py-2 font-medium">{source.source}</td>
                              <td className="py-2">{formatNumber(source.users)}</td>
                              <td className="py-2">{formatCurrency(source.revenue)}</td>
