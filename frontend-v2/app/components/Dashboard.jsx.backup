                            <th className="text-left py-2 text-sm font-medium text-zinc-600">Revenue</th>
                          </tr>
                        </thead>
                        <tbody>
                          {dashboardData.shopify.top_products.slice(0, 5).map((product, index) => (
                            <tr key={index} className="border-b border-zinc-100">
                              <td className="py-2">{index + 1}</td>
                              <td className="py-2 font-medium">{product.title || product.name}</td>
                              <td className="py-2">{product.quantity_sold}</td>
                              <td className="py-2">{formatCurrency(product.revenue)}</td>
                            </tr>
                          ))}
